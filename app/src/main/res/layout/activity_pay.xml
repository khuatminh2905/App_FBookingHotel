<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_editor_absoluteX="1dp"
    app:layout_editor_absoluteY="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F4F4"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".booking.PayActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:text="Chuyển khoản ngân hàng"
            android:textColor="#3F51B5"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Chọn tài khoản giao dịch"
            android:textColor="#000000"
            android:textSize="18dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_viet_bank_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vietcombank"
                    android:textColor="#358C38"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/logo_vietcombank" />

                <TextView
                    android:id="@+id/tv_viet_number_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_viet_bank_pay"
                    android:layout_marginTop="10dp"
                    android:text="Số tài khoản: 0451000504702"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_viet_owner_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_viet_number_pay"
                    android:layout_marginTop="5dp"
                    android:text="Chủ tài khoản: Fpoly Hotel"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_viet_branch_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_viet_owner_pay"
                    android:layout_marginTop="5dp"
                    android:text="Chi nhánh: Hà Nội"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_viet_description_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_viet_branch_pay"
                    android:layout_marginTop="5dp"
                    android:text="Nội dung: họ và tên - số phòng - id - đặt cọc tiền phòng  "
                    android:textColor="#000000" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_tech_bank_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Techcombank"
                    android:textColor="#FF0000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/logo_techcombank" />

                <TextView
                    android:id="@+id/tv_tech_number_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_tech_bank_pay"
                    android:layout_marginTop="10dp"
                    android:text="Số tài khoản: 19036190267011"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_tech_owner_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_tech_number_pay"
                    android:layout_marginTop="5dp"
                    android:text="Chủ tài khoản: Fpoly Hotel"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_tech_branch_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_tech_owner_pay"
                    android:layout_marginTop="5dp"
                    android:text="Chi nhánh: Hà Nội"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_tech_description_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_tech_branch_pay"
                    android:layout_marginTop="5dp"
                    android:text="Nội dung: họ và tên - số phòng - id - đặt cọc tiền phòng  "
                    android:textColor="#000000" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_warning_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*Lưu ý:"
                android:textColor="#FF0000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_line_1_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_warning_pay"
                android:layout_marginTop="5dp"
                android:text="- Qúy khách đặt cọc tối thiểu 20% để đặt phòng."
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_line_2_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_line_1_pay"
                android:layout_marginTop="5dp"
                android:text="- Trường hợp khi khách hàng đã thanh toán tại ngân hàng, khi khách hàng huỷ phòng sẽ bị thu 20% hoá đơn."
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_line_3_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_line_2_pay"
                android:layout_marginTop="5dp"
                android:text="- Nếu quý khách chuyển 100% tiền phòng, khi hủy phòng thì khách sạn sẽ hoàn lại 80% vào số tài khoản đã chuyển tiền cho khách sạn"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_line_4_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_line_3_pay"
                android:layout_marginTop="5dp"
                android:text="- Mọi thắc mắc xin quý khách liên hệ đến số điện thoại 0123456789 để được giải đáp thắc mắc"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_title_deposit_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_line_4_pay"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@id/tv_deposit_pay"
                android:text="Tiền đặt cọc: "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_deposit_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_line_4_pay"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:text="300000 VNĐ"
                android:textColor="#FF0000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_title_price_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title_deposit_pay"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/tv_price_pay"
                android:text="Tổng giá tiền: "
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_price_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_deposit_pay"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:text="1500000 VNĐ"
                android:textColor="#FF0000"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_cancel_detail"
                android:text="Quay lại"
                android:textColor="#FF0000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_open_confirm_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_room_detail"
                android:text="Thanh toán"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>